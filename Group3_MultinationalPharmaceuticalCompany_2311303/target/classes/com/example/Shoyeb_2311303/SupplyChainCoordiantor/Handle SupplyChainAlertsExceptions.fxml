<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.Shoyeb_2311303.HandleSupplyChainAlertsExceptionsController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Main VBox to hold content -->
    <VBox spacing="10.0" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">

        <!-- Title -->
        <Label text="Supply Chain Alerts Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- TableView for alerts -->
        <TableView fx:id="alertsTable" prefHeight="200.0">
            <columns>
                <TableColumn fx:id="idColumn" text="Alert ID" prefWidth="80"/>
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="120"/>
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                <TableColumn fx:id="riskColumn" text="Risk Level" prefWidth="100"/>
                <TableColumn fx:id="notesColumn" text="Notes" prefWidth="200"/>
            </columns>
        </TableView>

        <!-- HBox for action buttons -->
        <HBox spacing="10">
            <Button text="Add Note" fx:id="addNoteBtn" />
            <Button text="Categorize Alert" fx:id="categorizeBtn" />
            <Button text="Update Risk" fx:id="updateRiskBtn" />
            <Button text="Escalate" fx:id="escalateBtn" />
            <Button text="Mark Resolved" fx:id="resolveBtn" />
        </HBox>

        <!-- TextArea for adding notes -->
        <Label text="Add Notes:" />
        <TextArea fx:id="notesArea" prefHeight="80" wrapText="true" />

    </VBox>
</AnchorPane>
