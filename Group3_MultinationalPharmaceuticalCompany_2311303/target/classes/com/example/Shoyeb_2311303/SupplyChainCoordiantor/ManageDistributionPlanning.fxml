<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.Shoyeb_2311303.ManageDistributionPlanningController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="15" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <!-- Event 1: User login info -->
        <Label text="User logged in: UID" style="-fx-font-weight: bold;"/>

        <!-- Event 2: Region, Warehouse, Product selection -->
        <GridPane hgap="10" vgap="10">
            <Label text="Select Region:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="regionComboBox" prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Select Warehouse:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="warehouseComboBox" prefWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Select Products:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ListView fx:id="productListView" prefHeight="100" prefWidth="200" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- Event 3: Distribution schedule -->
        <Label text="Create / Update Distribution Schedule" style="-fx-font-weight: bold;"/>
        <GridPane hgap="10" vgap="10">
            <Label text="Enter Quantity:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="quantityField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Select Timeline:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="timelinePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Button text="Update Schedule" fx:id="updateScheduleBtn" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <!-- Event 4: Save & Publish -->
        <HBox spacing="15">
            <Button text="Save Plan" fx:id="saveBtn" HBox.hgrow="ALWAYS"/>
            <Button text="Publish Plan" fx:id="publishBtn" HBox.hgrow="ALWAYS"/>
        </HBox>

    </VBox>
</AnchorPane>
